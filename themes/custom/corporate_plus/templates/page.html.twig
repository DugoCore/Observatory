{# Page Template - Override for all pages #}

{# Include Header Component #}
{% include '@corporate_plus/header/header-observatory.html.twig' %}

{# Check if this is the login page and apply custom styling #}
{% if path == '/user/login' %}
  {# Force Login Page Override #}
  <style>
  /* Hide all page elements for login */
  body {
    margin: 0 !important;
    padding: 0 !important;
    background: #05213F !important;
    min-height: 100vh !important;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
  }

  /* Hide all page elements */
  .page-header,
  .breadcrumb,
  .main-content,
  .footer,
  .region-header,
  .region-footer,
  .region-sidebar-first,
  .region-sidebar-second {
    display: none !important;
  }
  </style>
  
  {# Force Login Container #}
  <div class="login-container">
    <div class="login-form-wrapper">
      {{ page.content }}
    </div>
  </div>
{% else %}
  {# Default page content for non-login pages #}
  {{ page.content }}
{% endif %}

{# Include Footer Component #}
{% include '@corporate_plus/footer/footer-observatory.html.twig' %}
