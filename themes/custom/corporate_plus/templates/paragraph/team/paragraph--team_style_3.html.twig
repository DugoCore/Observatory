{% if 'On' in content.field_check[0] %}
<section class="team-3 bg-gray dt-section">
    <div class="container">
        <div class="title-3">
            <span>{{content.field_tagline.0}}</span>
            <h2>{{content.field_title.0}}</h2>
        </div>
        {{content.field_view.0}}
        <a class="btn btn-primary btn-style-2" href="{{content.field_link.0['#url']}}" title="{{content.field_link.0['#title']}}">{{content.field_link.0['#title']}}</a>
    </div>
</section>
{% else %}
<section class="team-3 bg-white dt-section">
    <div class="container">
        <div class="title-3">
            <span>{{content.field_tagline.0}}</span>
            <h2>{{content.field_title.0}}</h2>
        </div>
        {{content.field_view.0}}
        <a class="btn btn-primary btn-style-2" href="{{content.field_link.0['#url']}}" title="{{content.field_link.0['#title']}}">{{content.field_link.0['#title']}}</a>
    </div>
</section>
{% endif %}