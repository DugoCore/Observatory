{% if 'On' in content.field_check[0] %}
<section class="team-1 dt-section bg-gray">
    <div class="container">
        {% if content.field_tagline.0 %}
        <div class="title-1">
            <span>{{content.field_tagline.0}}</span>
            <h2>{{content.field_title.0}}</h2>
        </div>
        {% endif %}
        {{content.field_view.0}}
        <a class="btn btn-primary btn-style-1" href="{{content.field_link.0['#url']}}" title="{{content.field_link.0['#title']}}">{{content.field_link.0['#title']}}</a>
    </div>
</section>
{% else %}
<section class="team-1 dt-section">
    <div class="container">
       {% if content.field_tagline.0 %}
        <div class="title-1">
            <span>{{content.field_tagline.0}}</span>
            <h2>{{content.field_title.0}}</h2>
        </div>
        {% endif %}
        {{content.field_view.0}}
        {% if content.field_link.0['#url'] %}
            <a class="btn btn-primary btn-style-1" href="{{content.field_link.0['#url']}}" title="{{content.field_link.0['#title']}}">{{content.field_link.0['#title']}}</a>
        {% endif %}
    </div>
</section>
{% endif %}