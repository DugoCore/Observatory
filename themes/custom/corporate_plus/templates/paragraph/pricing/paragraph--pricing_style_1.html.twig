{% if "On" in content.field_check[0] %}
<section class="pricing-plans-style-1 bg-gray dt-section">
    <div class="container">
         {% if content.field_tagline.0 %}
        <div class="title-1">
            <span>{{content.field_tagline.0}}</span>
            <h2>{{content.field_title.0}}</h2>
        </div>
        {% endif %}
        <div class="pricing-style-1">
            <div class="container">
                <div class="row s-15">
                    {{content.field_widget}}
                </div>
            </div>
        </div>
    </div>
</section>
{% else %}
<section class="pricing-plans-style-1 bg-white dt-section">
    <div class="container">
         {% if content.field_tagline.0 %}
        <div class="title-1">
            <span>{{content.field_tagline.0}}</span>
            <h2>{{content.field_title.0}}</h2>
        </div>
        {% endif %}
        <div class="pricing-style-1">
            <div class="container">
                <div class="row s-15">
                    {{content.field_widget}}
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}