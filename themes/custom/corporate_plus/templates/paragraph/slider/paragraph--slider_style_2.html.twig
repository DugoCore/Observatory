<section class="home-slider-2">
    <div class="slider-wrapper">
        <div class="container">
            <div class="row s-40">
                <div class="col-lg-2">
                    <div class="contact-number">
                        <div class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" viewBox="0 0 150 150">
                                <path id="Icon_ionic-md-call" data-name="Icon ionic-md-call" d="M146.166,108.667a97.8,97.8,0,0,1-29.579-4.581c-2.921-.835-6.253-.42-8.336,2.082L89.916,124.5a125.315,125.315,0,0,1-55-55L53.251,51.168a8.684,8.684,0,0,0,2.083-8.333,90.63,90.63,0,0,1-5-30A8.359,8.359,0,0,0,42,4.5H12.833A8.359,8.359,0,0,0,4.5,12.833,141.549,141.549,0,0,0,146.166,154.5a8.36,8.36,0,0,0,8.334-8.333V117A8.36,8.36,0,0,0,146.166,108.667Z" transform="translate(-4.5 -4.5)" fill="#181c31"/>
                            </svg>
                        </div>
                        <div class="contact-number-wrapper">
                            <a href="tel:{{content.field_contact_number.0}}" title="{{content.field_contact_number.0}}" class="number">{{content.field_contact_number.0}}</a>
                            <div class="text">{{content.field_text.0}}</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="slider-2-home owl-carousel owl-theme">
                        {{content.field_widget}}
                    </div>
                     <div class="image">
                        <img src="{{file_url(content.field_image['#items'].entity.uri.value)}}" alt="{{content.field_image['#items'].alt}}">
                    </div>
                </div>
            </div>
            <div class="arrows">
                <button class="prev">
                    <svg xmlns="http://www.w3.org/2000/svg" width="150" height="94" viewBox="0 0 150 94">
                        <path id="Path_40646" data-name="Path 40646" d="M94,13.409,79.662,0,0,75l79.743,75L94,136.591,28.514,75Z" transform="translate(150) rotate(90)" fill="#181c31"/>
                    </svg>
                </button>
                <button class="next">
                    <svg xmlns="http://www.w3.org/2000/svg" width="150" height="94" viewBox="0 0 150 94">
                        <path  data-name="Path 40645" d="M94,136.591,79.662,150,0,75,79.743,0,94,13.409,28.514,75Z" transform="translate(0 94) rotate(-90)" fill="#181c31"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</section>

                