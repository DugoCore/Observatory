{% set paragraph_parent = paragraph.getParentEntity() %}
{% set parent = paragraph_parent.type.value[0].target_id %}
{% if parent == "slider" %}
    {% set delta_value = delta + 1 %}
<div class="item" data-dot="<button>0{{delta_value}}</button>">
    <div class="container">
        <div class="row s-25">
            <div class="col-lg-6">
                <img src="{{file_url(content.field_image['#items'].entity.uri.value)}}" alt="{{content.field_image['#items'].alt}}">
            </div>
            <div class="col-lg-6">
                <div class="content">
                    <span>{{content.field_tagline.0}}</span>
                    <div class="title">{{content.field_title.0}}</div>
                    <a class="btn btn-primary btn-style-1" href="{{content.field_link.0['#url']}}" title="{{content.field_link.0['#title']}}">{{content.field_link.0['#title']}}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% elseif parent == "slider_style_2" %}
    {% set delta_value = delta + 1 %}
    <div class="item"  data-dot="<button>0{{delta_value}}</button>">
        <div class="title">{{content.field_title.0}}</div>
        <a class="btn btn-primary btn-style-1" href="{{content.field_link.0['#url']}}" title="{{content.field_link.0['#title']}}">{{content.field_link.0['#title']}}</a>
    </div>
{% elseif parent == "slider_style_3" %}
    <div class="item bg-image" style="background-image:linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)) ,url({{file_url(content.field_image['#items'].entity.uri.value)}});">
        <div class="title">{{content.field_title.0}}</div>
    </div>
{% endif %}
