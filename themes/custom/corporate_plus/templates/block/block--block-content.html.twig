{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}
  
  {% if content %}
    <!-- Hero Section for Observatory Hero -->
    {% if plugin_id == 'block_content:observatory_hero' or (content['#block_content'] is defined and content['#block_content'].bundle() == 'observatory_hero') or (content['#block_content'] is defined and content['#block_content'].bundle() == 'observatory_hero_section') %}
