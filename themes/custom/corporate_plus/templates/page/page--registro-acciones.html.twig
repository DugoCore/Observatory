<script>
// Funcionalidad para los tabs
document.addEventListener('DOMContentLoaded', function() {
  const tabItems = document.querySelectorAll('.tab-item');
  const tabContents = document.querySelectorAll('.tab-content');
  
  tabItems.forEach((tab, index) => {
    tab.addEventListener('click', function() {
      // Remover clase active de todos los tabs
      tabItems.forEach(t => t.classList.remove('active'));
      // Agregar clase active al tab clickeado
      this.classList.add('active');
      
      // Ocultar todos los contenidos de pestañas
      tabContents.forEach(content => content.classList.remove('active'));
      
      // Mostrar el contenido correspondiente
      if (index === 0) {
        document.getElementById('tab-politicas').classList.add('active');
      } else if (index === 1) {
        document.getElementById('tab-planes').classList.add('active');
      } else if (index === 2) {
        document.getElementById('tab-comunicaciones').classList.add('active');
      } else if (index === 3) {
        document.getElementById('tab-financiamientos').classList.add('active');
      }
    });
  });
  
  // Inicializar datepickers (si se usa una librería)
  const dateInputs = document.querySelectorAll('.date-input input');
  dateInputs.forEach(input => {
    input.addEventListener('click', function() {
      // Aquí se puede integrar un datepicker
      console.log('Date input clicked');
    });
  });
  
  // Funcionalidad para la sub-navegación de Financiamientos
  const subNavItems = document.querySelectorAll('.sub-nav-item');
  subNavItems.forEach(item => {
    item.addEventListener('click', function() {
      // Remover clase active de todos los sub-nav items
      subNavItems.forEach(i => i.classList.remove('active'));
      // Agregar clase active al item clickeado
      this.classList.add('active');
    });
  });
});
</script> 