{# Modern Login Page Design - Using Existing Design System #}

{# Include Header Component #}
{% include '@corporate_plus/header-component.html.twig' %}

{# Main Login Section #}
<section class="login-page dt-section">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      
      {# Login Form Column #}
      <div class="col-lg-5 col-md-8 col-12">
        <div class="login-form-container">
          
          {# Login Header #}
          <div class="login-header text-center mb-4">
            {% if login_title %}
              <h1 class="login-title">{{ login_title }}</h1>
            {% else %}
              <h1 class="login-title">Iniciar Sesión</h1>
            {% endif %}
            
            {% if login_description %}
              <p class="login-subtitle">{{ login_description }}</p>
            {% else %}
              <p class="login-subtitle">Accede a tu cuenta del Observatorio</p>
            {% endif %}
          </div>

          {# Login Form #}
          <div class="login-form-wrapper">
            <form{{ attributes.addClass('login-form') }}>
              
              {# Username Field #}
              <div class="form-group form-style-1 mb-4">
                {{ form.name }}
                {% if login_name_text %}
                  <small class="form-text text-muted">{{ login_name_text }}</small>
                {% endif %}
              </div>

              {# Password Field #}
              <div class="form-group form-style-1 mb-4">
                {{ form.pass }}
                {% if login_pass_text %}
                  <small class="form-text text-muted">{{ login_pass_text }}</small>
                {% endif %}
              </div>

              {# Submit Button #}
              <div class="form-group mb-4">
                {{ form.actions }}
              </div>

              {# Additional Content #}
              {% if login_content %}
                <div class="login-additional-content">
                  {{ login_content|raw }}
                </div>
              {% endif %}

              {# Form Hidden Fields #}
              {{ form.form_build_id }}
              {{ form.form_id }}
            </form>
          </div>

          {# Additional Content 2 #}
          {% if login_content_1 %}
            <div class="login-additional-content-2 mt-4">
              {{ login_content_1|raw }}
            </div>
          {% endif %}

        </div>
      </div>

      {# Image Column #}
      <div class="col-lg-6 col-md-8 col-12">
        {% if login_image_url %}
          <div class="login-image-container">
            <div class="login-image-wrapper">
              <img src="{{ login_image_url }}" alt="Login Image" class="login-image">
              <div class="login-image-overlay">
                <div class="overlay-pattern"></div>
              </div>
            </div>
          </div>
        {% else %}
          <div class="login-image-container">
            <div class="login-image-wrapper">
              <div class="login-placeholder">
                <div class="placeholder-icon">
                  <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 12C14.21 12 16 10.21 16 8C16 5.79 14.21 4 12 4C9.79 4 8 5.79 8 8C8 10.21 9.79 12 12 12ZM12 14C9.33 14 4 15.34 4 18V20H20V18C20 15.34 14.67 14 12 14Z" fill="#1e3a8a"/>
                  </svg>
                </div>
                <h3>Observatorio</h3>
                <p>Sistema de Gestión Ambiental</p>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>
