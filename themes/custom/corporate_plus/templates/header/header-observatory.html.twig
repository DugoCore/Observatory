<script>
document.addEventListener('DOMContentLoaded', function() {
  // Buscar el enlace "Inicio" en el menú
  const inicioLinks = document.querySelectorAll('.nav-link');
  
  inicioLinks.forEach(function(link) {
    if (link.textContent.trim().toLowerCase() === 'inicio') {
      // Cambiar el href para que vaya a la página principal
      link.href = '/';
      
      // Agregar evento de clic para asegurar que funcione
      link.addEventListener('click', function(e) {
        // Si no es un dropdown toggle, ir a página principal
        if (!link.classList.contains('dropdown-toggle')) {
          window.location.href = '/';
        }
      });
    }
  });
});
</script> 