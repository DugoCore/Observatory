<style>
#header-observatory {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%) !important;
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  z-index: 100 !important;
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  min-height: 100px !important;
  box-shadow: 
    0 4px 20px rgba(0, 0, 0, 0.08) !important,
    0 1px 3px rgba(0, 0, 0, 0.05) !important,
    0 0 0 1px rgba(255, 255, 255, 0.9) !important;
  width: 100% !important;
  backdrop-filter: blur(10px) !important;
}

#header-observatory .menubar {
  background: transparent !important;
  padding: 1.25rem 0 !important;
  display: block !important;
  visibility: visible !important;
}

#header-observatory .navbar {
  background: white !important;
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  width: 100% !important;
}

.header-observatory-logo {
  display: flex !important;
  align-items: center;
  gap: 1rem;
  visibility: visible !important;
  opacity: 1 !important;
}

.logo-container {
  display: flex !important;
  align-items: center;
  gap: 1rem;
}

.circular-logo {
  width: auto !important;
  height: 80px !important;
  border-radius: 0 !important;
  background: transparent !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: none !important;
  overflow: visible !important;
}

.circular-logo img {
  height: 80px !important;
  width: auto !important;
  object-fit: contain !important;
  filter: none !important;
}

.logo-separator {
  width: 1px !important;
  height: 40px !important;
  background: #666 !important;
  margin: 0 1rem !important;
}

.logo-text {
  display: flex !important;
  flex-direction: column !important;
  gap: 0.1rem !important;
}

.ministry-name {
  font-size: 0.7rem !important;
  font-weight: 600 !important;
  color: #1e3a8a !important;
  font-family: 'Cabin', sans-serif !important;
  text-transform: uppercase !important;
  letter-spacing: 0.5px !important;
  line-height: 1.1 !important;
  visibility: visible !important;
  opacity: 1 !important;
  margin: 0 !important;
}

.ministry-name-line1 {
  font-size: 0.65rem !important;
}

.ministry-name-line2 {
  font-size: 0.65rem !important;
}

/* Navigation Menu */
#header-observatory .navbar-nav {
  display: flex !important;
  align-items: center !important;
  gap: 2rem !important;
  margin: 0 !important;
  padding: 0 !important;
}

#header-observatory .navbar-nav .nav-item {
  list-style: none !important;
  position: relative !important;
}

#header-observatory .navbar-nav .nav-link {
  color: #4a5568 !important;
  font-size: 0.9rem !important;
  font-weight: 500 !important;
  text-decoration: none !important;
  padding: 0.5rem 0.75rem !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  font-family: 'Cabin', sans-serif !important;
  display: flex !important;
  align-items: center !important;
  gap: 0.5rem !important;
  border-radius: 6px !important;
  position: relative !important;
  overflow: hidden !important;
}

#header-observatory .navbar-nav .nav-link::before {
  content: '' !important;
  position: absolute !important;
  bottom: 0 !important;
  left: 50% !important;
  width: 0 !important;
  height: 2px !important;
  background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%) !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  transform: translateX(-50%) !important;
}

#header-observatory .navbar-nav .nav-link:hover {
  color: #1e3a8a !important;
  background: rgba(30, 58, 138, 0.05) !important;
}

#header-observatory .navbar-nav .nav-link:hover::before {
  width: 80% !important;
}

#header-observatory .navbar-nav .nav-link.active {
  color: #1e3a8a !important;
  font-weight: 600 !important;
  background: rgba(30, 58, 138, 0.1) !important;
}

#header-observatory .navbar-nav .nav-link.active::before {
  width: 80% !important;
}

/* Enhanced Dropdown Styles */
#header-observatory .dropdown-arrow {
  width: 14px !important;
  height: 14px !important;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
  margin-left: 6px !important;
  opacity: 0.7 !important;
}

#header-observatory .nav-item.dropdown:hover .dropdown-arrow {
  transform: rotate(90deg) !important;
  opacity: 1 !important;
}

#header-observatory .dropdown-menu {
  position: absolute !important;
  top: 100% !important;
  left: 0 !important;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%) !important;
  border: none !important;
  border-radius: 10px !important;
  box-shadow: 
    0 10px 25px rgba(0, 0, 0, 0.1) !important,
    0 4px 10px rgba(0, 0, 0, 0.05) !important,
    0 0 0 1px rgba(255, 255, 255, 0.8) !important;
  min-width: 200px !important;
  padding: 0.5rem 0 !important;
  margin-top: 0.5rem !important;
  opacity: 0 !important;
  visibility: hidden !important;
  transform: translateY(-15px) scale(0.95) !important;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
  z-index: 1000 !important;
  backdrop-filter: blur(10px) !important;
}

#header-observatory .nav-item.dropdown:hover .dropdown-menu,
#header-observatory .dropdown-menu.show {
  opacity: 1 !important;
  visibility: visible !important;
  transform: translateY(0) scale(1) !important;
}

#header-observatory .dropdown-item {
  padding: 0.625rem 1.25rem !important;
  color: #4a5568 !important;
  text-decoration: none !important;
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  font-size: 0.85rem !important;
  font-weight: 500 !important;
  font-family: 'Cabin', sans-serif !important;
  border: none !important;
  background: transparent !important;
  position: relative !important;
  overflow: hidden !important;
}

#header-observatory .dropdown-item::before {
  content: '' !important;
  position: absolute !important;
  left: 0 !important;
  top: 0 !important;
  width: 0 !important;
  height: 100% !important;
  background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%) !important;
  transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  z-index: -1 !important;
}

#header-observatory .dropdown-item:hover {
  color: #1e3a8a !important;
  transform: translateX(8px) !important;
  background: rgba(30, 58, 138, 0.05) !important;
}

#header-observatory .dropdown-item:hover::before {
  width: 4px !important;
}

#header-observatory .dropdown-item.active {
  background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%) !important;
  color: white !important;
}

#header-observatory .dropdown-item.active::before {
  width: 4px !important;
  background: #ffffff !important;
}

/* Enhanced Nested Dropdown Support */
#header-observatory .dropdown-item.dropdown {
  position: relative !important;
}

#header-observatory .dropdown-item.dropdown .dropdown-menu {
  left: 100% !important;
  top: 0 !important;
  margin-top: 0 !important;
  margin-left: 0.75rem !important;
  transform: translateX(-15px) scale(0.95) !important;
}

#header-observatory .dropdown-item.dropdown:hover .dropdown-menu,
#header-observatory .dropdown-item.dropdown .dropdown-menu.show {
  opacity: 1 !important;
  visibility: visible !important;
  transform: translateX(0) scale(1) !important;
}

/* Dropdown Menu Header */
#header-observatory .dropdown-menu::before {
  content: '' !important;
  position: absolute !important;
  top: -6px !important;
  left: 20px !important;
  width: 12px !important;
  height: 12px !important;
  background: #ffffff !important;
  transform: rotate(45deg) !important;
  box-shadow: -2px -2px 5px rgba(0, 0, 0, 0.05) !important;
  z-index: -1 !important;
}

/* Enhanced Hover Effects for Main Menu Items */
#header-observatory .nav-item.dropdown:hover .nav-link {
  color: #1e3a8a !important;
}

/* Responsive Dropdown Adjustments */
@media (max-width: 768px) {
  #header-observatory .dropdown-menu {
    position: static !important;
    transform: none !important;
    box-shadow: none !important;
    border-radius: 0 !important;
    margin-top: 0 !important;
    background: rgba(248, 249, 250, 0.5) !important;
  }
  
  #header-observatory .dropdown-item {
    padding: 0.5rem 1.25rem !important;
    font-size: 0.8rem !important;
  }
  
  #header-observatory .dropdown-item:hover {
    transform: translateX(4px) !important;
  }
}

/* Enhanced Administrator Button */
#header-observatory .get-quote-btn {
  margin-left: 2rem !important;
}

#header-observatory .get-quote-btn .btn {
  background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%) !important;
  border: none !important;
  color: white !important;
  font-weight: 600 !important;
  padding: 0.625rem 1.5rem !important;
  border-radius: 8px !important;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
  font-size: 0.85rem !important;
  font-family: 'Cabin', sans-serif !important;
  box-shadow: 
    0 4px 12px rgba(74, 85, 104, 0.2) !important,
    0 2px 4px rgba(74, 85, 104, 0.1) !important;
  position: relative !important;
  overflow: hidden !important;
}

#header-observatory .get-quote-btn .btn::before {
  content: '' !important;
  position: absolute !important;
  top: 0 !important;
  left: -100% !important;
  width: 100% !important;
  height: 100% !important;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent) !important;
  transition: left 0.5s ease !important;
}

#header-observatory .get-quote-btn .btn:hover {
  background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%) !important;
}

#header-observatory .get-quote-btn .btn:hover::before {
  left: 100% !important;
}

#header-observatory .get-quote-btn .btn:active {
  background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%) !important;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .edit-btn {
    top: 10px !important;
    right: 10px !important;
  }
  
  .edit-btn .btn {
    padding: 0.4rem 0.8rem !important;
    font-size: 0.7rem !important;
  }
}
</style>

